{% extends "_main.jinja" %}
{% block main %}
    <form method="POST"> 
        {{ form.csrf_token }}
        <div class="form-floating">
            {{ form.username(class="form-control mb-3", placeholder="Username") }}
            {{ form.username.label }}
        </div>
        
        <div class="form-floating">
            {{ form.password(class="form-control mb-3", placeholder="Password") }}
            {{ form.password.label }}
        </div>
        
        <button class="btn btn-primary" type="submit">Submit</button>
    </form>
{% endblock %}